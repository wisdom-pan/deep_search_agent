# 前端 Streamlit 服务 Dockerfile
FROM m.daocloud.io/docker.io/library/python:3.10-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    build-essential \
    libxml2-dev libxslt1-dev \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt -i https://mirrors.cloud.tencent.com/pypi/simple

# 复制应用代码
COPY . .

# 复制前端代码
COPY frontend/ ./frontend/

# 以开发模式安装 graphrag_agent 包
RUN pip install -e .

# 暴露端口
EXPOSE 8501

# 启动Streamlit应用
CMD ["streamlit", "run", "frontend/app.py", "--server.address=0.0.0.0", "--server.port=8501", "--server.headless=true"]
